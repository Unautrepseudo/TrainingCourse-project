{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1 class="titreallproduct">{{ product.name }} </h1><hr>

<div class="testflex">
        {% for product in products %}
        
            <div class="salutccoll">
                <div class="card cardproduct" style="width: 18rem;">
                    <img src="{{asset('images/')}}{{ product.image }}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{ product.name }}</h5>
                        <p class="card-text">{{ product.price }}€</p>
                        <p class="card-text">{{ product.stock }}</p>
                        <p class="card-text">{{ product.reference }}</p>
                        <p class="card-text">{{ product.description }}</p>
                        <p class="card-text">{{ product.materials }}</p>
                        <a href="#" class="btn btn-primary">Ajouter au Panier</a>
                     </div>
                </div>
             </div>
            {% if loop.index % 3 == 0 %} 
        </div>  <hr>   <div class="testflex">  {% endif %}
      
     {% endfor %}
      

    <h1 class="titreallproduct">Tous nos Produits  </h1><br><hr>

<div class="MainLigneTrois ">
{% for product in products %}
    <div class="widthcard ">
            <div class="card-body centerbodododo reveal-2">
                <h5 class="reveal-4">{{ product.name }}</h5> 
                <a href="{{ path('products_main_page_show', {'id': product.id}) }}"><img src="{{asset('images/')}}{{ product.image }}"class="imagemainproduct img-responsive"></a>
                <p class="reveal-4">Matériaux : {{ product.materials }}</p>
                <p class="reveal-4">Créé par : {{ product.user }}</p>
                <p class="priceproduct reveal-3">PRIX : {{ product.price }}€</p>
             </div>
      </div>
    {% if loop.index % 3 == 0 %} 
</div> <!-- Fin div mainlignetrois -->
<hr>
<div class="MainLigneTrois ">  {% endif %}
{% endfor %}
{% endblock %}
