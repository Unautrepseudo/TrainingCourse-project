{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1>Product index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Reference</th>
                <th>Price</th>
                <th>Materials</th>
                <th>Stock</th>
                <th>Description</th>
                <th>Artisan_name</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.reference }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.materials }}</td>
                <td>{{ product.stock }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.user }}</td>
                <td><img src="{{asset('images/')}}{{ product.image }}" style="width:75px;max-height: 75px;"></td>
                <td>
                    <a href="{{ path('cart_add', {'id': product.id}) }}">show</a>
                    <a href="{{ path('cart_add', {'id': product.id}) }}">edit</a>
                    <a href="{{ path('cart_add', {'id': product.id}) }}"  class="btn btn-success float-right">ajout
                         <i class="fas fa-shopping -cart mr-1">
                         ajouter
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('product_new') }}">Create new</a>
{% endblock %}
