{% extends 'base.html.twig' %}

{% block title %}Artisan index{% endblock %}

{% block body %}
        <header>
        <hr class="lign">
        <h1 class="titleartisan">Nos artisans</h1>
        <hr class="lign">
    </header>
    <div class="row d-flex justify-content-around mx-auto mt-5 boucle_art">
{% for artisan in artisans %}
            <div class="col-lg-4 col-md-10 col-xm-6 col-xs-4 card mt-5 reveal row1">
                <a id="crafts1" class="card craftsman" href="{{ path('artisan_show', {'id': artisan.id}) }}" style="width: 18rem;">
                    <div class=" mx-auto container-img artisanImgcon">
                        <img src="{{asset('images/')}}{{ artisan.image }}" class="card-img-top img-pres img-fluid artisanImg" alt="...">
                    </div>

                    <div class="card-body spacecard">
                        <h5 class="card-title namecrafts">{{ artisan.firstName }}</h5>
                        <hr class="betweenlign">
                        <p class="card-text jobtown"> {{ artisan.speciality }} - {{ artisan.city }}</p>
                    </div>
                </a>
            </div> 
    {% if loop.index % 3 == 0 %} 
         </div>   <br>   
         <div class="boucle_art">  {% endif %}
{% endfor %}

{% endblock %}
