{% extends 'base.html.twig' %}

{% block title %}Customer index{% endblock %}

{% block body %}
    <h1>Customer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>First_name</th>
                <th>Last_name</th>
                <th>Pseudo</th>
                <th>Gender</th>
                <th>Email</th>
                <th>Password</th>
                <th>Birthday</th>
                <th>Address</th>
                <th>City</th>
                <th>Zip_code</th>
                <th>Phone_number</th>
                <th>Date de cr√©ation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td>{{ customer.id }}</td>
                <td>{{ customer.firstName }}</td>
                <td>{{ customer.lastName }}</td>
                <td>{{ customer.pseudo }}</td>
                <td>{{ customer.gender }}</td>
                <td>{{ customer.email }}</td>
                <td>{{ customer.password }}</td>
                <td>{{ customer.birthday ? customer.birthday|date('d-M-Y') : '' }}</td>
                <td>{{ customer.address }}</td>
                <td>{{ customer.city }}</td>
                <td>{{ customer.zipCode }}</td>
                <td>{{ customer.phoneNumber }}</td>
                <td>
                    <a href="{{ path('customer_show', {'id': customer.id}) }}">show</a>
                    <a href="{{ path('customer_edit', {'id': customer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('customer_new') }}">Create new</a>
{% endblock %}
