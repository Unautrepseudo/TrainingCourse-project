{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}
     <div class="bg-light p-3">
       <h1>Votre panier</h1>
     <div>
      
       {% if items | length > 0 %}
         <table class="table">
            <thead>
               <tr>
                  <th>Produits</th>
                  <th>reference</th>
                  <th>Prix</th>
                  <th>materials</th>
                  <th>stock</th>
                  <th>description</th>
                  <th>Total</th>
                  <th></th>
               </tr>
            </thead>
            <tbody>
                {% for item in items %}
                   <tr>
                     <td>{{item.product.name}}</td>
                     <td>{{item.product.reference}}</td>
                     <td>{{item.product.price}}</td>
                     <td>{{item.product.materials}}</td>
                     <td>{{item.product.stock}}</td>
                     <td>{{item.product.description}}</td>
                     <td>{{item.product.price * item.product.stock }}</td>
                     <td>
                        <a href="#" class="btn btn-danger.btn-sm">
                        <i class="fas.fa-trash"></i>
                      </a>
                     </td>
                   </tr>
                {% endfor %}
            </tbody>
            <tfoot>
               <tr>
                 <tr colspan="5" class="text-right">Total :</tr>
                 <tr>{{ total}}</tr>
                 <tr></tr>
                 <tr></tr>
                 <tr></tr>
                 <tr></tr>
               </tr>
            </tfoot>
         </table>
        {% else %}
            <p>Mon panier est vide</p>
       {% endif %}
{% endblock %}
